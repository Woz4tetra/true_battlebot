{
    "name": "true_battlebot_devcontainer",
    "service": "true_battlebot_devcontainer",
    "dockerComposeFile": ["docker-compose.yaml", "docker-compose.gpu.yaml"],
    "initializeCommand": ".devcontainer/setup_container.sh",
    "workspaceFolder": "/opt/bwbots/true_battlebot",
    "shutdownAction": "stopCompose",
    "postCreateCommand": ".devcontainer/post_create.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "editorconfig.editorconfig",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.cpptools",
                "jtr.vscode-position",
                "github.copilot",
                "github.copilot-chat",
                "bierner.folder-source-actions",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "ms-iot.vscode-ros",
                "visualstudioexptteam.vscodeintellicode",
                "ms-vscode-remote.vscode-remote-extensionpack",
                "ms-vsliveshare.vsliveshare",
                "esbenp.prettier-vscode",
                "styled-components.vscode-styled-components",
                "redhat.vscode-yaml",
                "ms-vscode-remote.remote-containers",
                "timonwong.shellcheck",
                "charliermarsh.ruff",
                "matangover.mypy",
                "ms-python.black-formatter",
                "twxs.cmake",
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools-extension-pack",
                "redhat.vscode-xml"
            ]
        }
    }
}

<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="camera_name" default="camera_1" />
    <arg name="tag_config_path" default="$(find bw_bringup)/config/tags.yaml" />


    <node name="depthai_oak_1_w" pkg="bw_tracking_cam" type="depthai_oak_1_w" output="screen"
        required="false">
        <param name="camera_name" value="$(arg camera_name)" />
    </node>

    <group ns="$(arg camera_name)">
        <node pkg="nodelet" type="nodelet" args="manager" name="$(arg camera_name)_image_proc"
            output="screen" />
        <node pkg="nodelet" type="nodelet" name="$(arg camera_name)_image_readout" output="screen"
            args="load image_proc/rectify $(arg camera_name)_image_proc --no-bond">
            <remap from="image_mono" to="image_raw" />
        </node>

        <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg camera_name)_apriltag"
            required="false" output="screen">
            <rosparam command="load" file="$(arg tag_config_path)" ns="" />
        </node>
    </group>
</launch>
